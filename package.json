{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-gts-starter",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint:style": "vue-cli-service lint:style",
    "gts:check": "gts check ./src/**/*.{js,jsx,ts,tsx,vue}",
    "gts:clean": "gts clean",
    "gts:fix": "gts fix ./src/**/*.{js,jsx,ts,tsx,vue}",
    "gts:lint": "gts lint ./src/**/*.{js,jsx,ts,tsx,vue}",
    "posttest": "npm.cmd run lint"
  },
  "dependencies": {
    "core-js": "^3.18.0",
    "eslint-plugin-node": "^11.1.0",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.2",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@samhammer/vue-cli-plugin-stylelint": "~2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-router": "^4.5.13",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-plugin-vuex": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.2.12",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "<7.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-vue": "^7.18.0",
    "gts": "^3.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "sass": "~1.32.13",
    "sass-loader": "^10.1.0",
    "sass-resources-loader": "^2.2.4",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.2.0",
    "typescript": ">=3.3.1 <4.2.0",
    "vue-template-compiler": "^2.6.14"
  },
  "engines": {
    "node": ">=10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{vue,htm,html,css,sss,less,scss}": [
      "vue-cli-service lint:style",
      "git add"
    ]
  }
}
